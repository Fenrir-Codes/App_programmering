package dk.tec.jaj.example3;

import java.sql.*;
import org.codehaus.jackson.map.ObjectMapper;
import dk.tec.jaj.Elev;

public class DBTools {
	
	Connection con;
	Statement stmt;
	ResultSet set;
	
    private void connect() {
        try {
            Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
            String url = "jdbc:sqlserver://localhost:1433;databaseName=MyApiDB;user=sa;password=Passw0rd";
            con = DriverManager.getConnection(url);
        } catch (ClassNotFoundException | SQLException e) {
            e.printStackTrace();
        }
    }

    public Elev getElevById(int id) {
        connect();
        Elev elev = null;
        try {
            String query = "SELECT * FROM Elev WHERE id =" +id;
            PreparedStatement pstmt = con.prepareStatement(query);
            pstmt.setInt(1, id);
            ResultSet resultSet = pstmt.executeQuery();

            if (resultSet.next()) {
                int elevId = resultSet.getInt("Id");
                String name = resultSet.getString("name");
                int age = resultSet.getInt("Age");
                String job = resultSet.getString("Job");
                // Extract other necessary fields from the result set

                // Create an Elev object with the retrieved data
                elev = new Elev(elevId, name,age,job);
                // Set other fields of the Elev object
            }

            resultSet.close();
            pstmt.close();
            con.close();
        } catch (SQLException e) {
            e.printStackTrace();
        }

        // Convert Elev object to JSON string
        ObjectMapper objectMapper = new ObjectMapper();
        String json = "";
        try {
            json = objectMapper.writeValueAsString(elev);
        } catch (Exception e) {
            e.printStackTrace();
        }

        return elev;
    }
    }
}
